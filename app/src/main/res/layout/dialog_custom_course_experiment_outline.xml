<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="课程代码:" />

        <EditText
            android:id="@+id/edit_course_code"
            style="@style/EditText.Normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_custom_add_edit_text_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="课程名称:" />

        <EditText
            android:id="@+id/edit_course_name"
            style="@style/EditText.Normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_custom_add_edit_text_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="实验成绩占比(%):" />

        <EditText
            android:id="@+id/edit_proportion_of_experimental_results"
            style="@style/EditText.Normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_custom_add_edit_text_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="实验项目:" />

        <EditText
            android:id="@+id/edit_experimental_project_name"
            style="@style/EditText.Normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_custom_add_edit_text_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:singleLine="true" />

    </LinearLayout>

</LinearLayout>