<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="@dimen/module_item_allocation_experiment_height"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_border"
        android:gravity="center"
        android:text="序号" />

    <TextView
        android:layout_width="@dimen/module_item_allocation_experiment_experiment_name_width"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_border"
        android:gravity="center"
        android:text="实验名称" />

    <TextView
        android:layout_width="@dimen/module_item_allocation_experiment_cell_width"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_border"
        android:gravity="center"
        android:text="周" />

    <TextView
        android:layout_width="@dimen/module_item_allocation_experiment_cell_width"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_border"
        android:gravity="center"
        android:text="星期几" />

    <TextView
        android:layout_width="@dimen/module_item_allocation_experiment_cell_width"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_border"
        android:gravity="center"
        android:text="开始时间" />

    <TextView
        android:layout_width="@dimen/module_item_allocation_experiment_cell_width"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_border"
        android:gravity="center"
        android:text="结束时间" />

    <TextView
        android:layout_width="@dimen/module_item_allocation_experiment_cell_width"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_border"
        android:gravity="center"
        android:text="分配" />


</LinearLayout>
