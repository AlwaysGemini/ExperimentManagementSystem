<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="@dimen/module_item_allocation_experiment_height"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_border"
        android:gravity="center"
        android:text="序号" />

    <TextView
        android:layout_width="@dimen/module_item_allocation_experiment_experiment_name_width"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_border"
        android:gravity="center"
        android:text="实验项目名称" />

    <TextView
        android:layout_width="@dimen/module_item_allocation_experiment_cell_width"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_border"
        android:gravity="center"
        android:text="分配" />


</LinearLayout>
