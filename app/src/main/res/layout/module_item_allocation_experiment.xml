<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/module_item_allocation_experiment_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_sequence"
        android:layout_width="@dimen/module_item_allocation_experiment_height"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_border"
        android:gravity="center" />

    <TextView
        android:id="@+id/text_experiment_item_name"
        android:layout_width="@dimen/module_item_allocation_experiment_experiment_name_width"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_border"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="@dimen/module_item_allocation_experiment_cell_width"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_border"
        android:gravity="center">

        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/button_allocation"
            style="@style/RoundButton.Auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分配"
            app:rb_radius="2dp" />
    </LinearLayout>

</LinearLayout>
