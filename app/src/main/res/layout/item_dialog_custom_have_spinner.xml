<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/dialog_custom_course_experiment_project_spinner_width"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <com.xuexiang.xui.widget.textview.autofit.AutoFitTextView
            android:id="@+id/text"
            android:layout_width="@dimen/dialog_item_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="text:" />

        <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
            android:id="@+id/spinner"
            style="@style/Material.SpinnerStyle"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            app:ms_in_dialog="true" />

    </LinearLayout>

</LinearLayout>
