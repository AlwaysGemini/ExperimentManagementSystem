<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/line_experimental_project_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_experimental_project_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="实验项目代码:" />

            <EditText
                android:id="@+id/edit_experimental_project_code"
                style="@style/EditText.Normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_custom_add_edit_text_height"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/text_experimental_project_code"
                android:singleLine="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_experimental_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_experimental_project_code">

            <TextView
                android:id="@+id/text_experimental_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="实验项目名称:" />

            <EditText
                android:id="@+id/edit_experimental_project_name"
                style="@style/EditText.Normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_custom_add_edit_text_height"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/text_experimental_project_name"
                android:singleLine="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_experimental_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_experimental_project_name">

            <TextView
                android:id="@+id/text_experimental_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="实验内容:" />

            <EditText
                android:id="@+id/edit_experimental_content"
                style="@style/EditText.Normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_custom_add_edit_text_height"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/text_experimental_content"
                android:singleLine="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_experimental_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_experimental_content">

            <TextView
                android:id="@+id/text_experimental_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="实验学时:" />

            <EditText
                android:id="@+id/edit_experimental_hours"
                style="@style/EditText.Normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_custom_add_edit_text_height"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/text_experimental_hours"
                android:singleLine="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_experimental_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_experimental_hours">

            <TextView
                android:id="@+id/text_experimental_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="实验学分:" />

            <EditText
                android:id="@+id/edit_experimental_credits"
                style="@style/EditText.Normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_custom_add_edit_text_height"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/text_experimental_credits"
                android:singleLine="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_experimental_properties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_experimental_credits">

            <TextView
                android:id="@+id/text_experimental_properties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="实验属性:" />

            <EditText
                android:id="@+id/edit_experimental_properties"
                style="@style/EditText.Normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_custom_add_edit_text_height"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/text_experimental_properties"
                android:singleLine="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_experimental_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_experimental_properties">

            <TextView
                android:id="@+id/text_experimental_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="实验类型:" />

            <EditText
                android:id="@+id/edit_experimental_type"
                style="@style/EditText.Normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_custom_add_edit_text_height"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/text_experimental_type"
                android:singleLine="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_experimental_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_experimental_type">

            <TextView
                android:id="@+id/text_experimental_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="实验类别:" />

            <EditText
                android:id="@+id/edit_experimental_category"
                style="@style/EditText.Normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_custom_add_edit_text_height"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/text_experimental_category"
                android:singleLine="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_affiliation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_experimental_category">

            <TextView
                android:id="@+id/text_affiliation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="所属单位:" />

            <EditText
                android:id="@+id/edit_affiliation"
                style="@style/EditText.Normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_custom_add_edit_text_height"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/text_affiliation"
                android:singleLine="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_affiliation">

            <TextView
                android:id="@+id/text_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="所属学科:" />

            <EditText
                android:id="@+id/edit_subject"
                style="@style/EditText.Normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_custom_add_edit_text_height"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/text_subject"
                android:singleLine="true" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
