<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="?attr/xui_config_content_spacing_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实验属性:" />

        <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
            android:id="@+id/spinner_experimental_properties"
            style="@style/Material.SpinnerStyle"
            android:layout_width="@dimen/dialog_custom_course_experiment_project_spinner_width"
            android:layout_marginLeft="20dp"
            app:es_hint="实验属性"
            app:ms_in_dialog="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实验类型:" />

        <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
            android:id="@+id/spinner_experimental_type"
            style="@style/Material.SpinnerStyle"
            android:layout_width="@dimen/dialog_custom_course_experiment_project_spinner_width"
            android:layout_marginLeft="20dp"
            app:es_hint="实验类型"
            app:ms_in_dialog="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实验类别:" />

        <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
            android:id="@+id/spinner_experimental_category"
            style="@style/Material.SpinnerStyle"
            android:layout_width="@dimen/dialog_custom_course_experiment_project_spinner_width"
            android:layout_marginLeft="20dp"
            app:es_hint="实验类别"
            app:ms_in_dialog="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="实验项目名称:" />

        <EditText
            android:id="@+id/edit_experimental_project_name"
            style="@style/EditText.Normal"
            android:layout_width="@dimen/dialog_custom_course_experiment_project_spinner_width"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_marginStart="20dp"
            android:hint="实验项目名称"
            android:singleLine="true" />

    </LinearLayout>

</LinearLayout>